# === Для официального образа postgres (требует верхний регистр) ===
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_password_for_docker
POSTGRES_DB=inventory_db

# === Для приложения (pydantic-settings ожидает нижний регистр) ===
postgres_user=postgres
postgres_password=secure_password_for_docker
postgres_db=inventory_db
postgres_host=db
postgres_port=5432

# Application Configuration
debug=false
app_host=0.0.0.0
app_port=8000
api_prefix=/api/v1

# CORS Configuration
cors_origins=http://localhost:3000

# Logging Configuration
log_level=INFO